.pos-wrapper, .sale-create
	position relative
	width 100%
	height 100%
	background url(../img/pos.png) repeat
.pos-wrapper
	position relative
	padding-top 25px
	
	// products
	.product-filter
		position relative
		height 40px
	.products
		position relative
		background #f8f8f8
		border 1px solid #ddd;
		margin-top 20px
		// box-shadow 2px 2px 6px #ddd
		.product-outer
			position relative
			padding: 10px
			height 450px
			overflow-y auto
			
			.product
				position relative
				background #fff
				margin 15px 0
				padding 10px
				border-radius 6px
				
				.sku, .name, .price
					display block
				.sku
					font-size 18px
					font-weight bold
				.name
					font-size 24px
					font-weight 100
					text-transform capitalize
				.price
					background #ddd
					padding 8px 12px
					// color #3498db
					font-size 16px
					font-weight bolder
					display inline-block
					border-radius 6px
					// margin-top 5px
				.pos-btn
					position relative
					// top 15px